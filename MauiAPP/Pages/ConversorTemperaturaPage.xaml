<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPP.Pages.ConversorTemperaturaPage"
             Title="ConversorTemperaturaPage">
    <StackLayout Padding="20">
        <Label Text="Conversor de Temperatura" FontSize="Large" HorizontalOptions="Center"/>
        <Entry x:Name="entryFahrenheit" Placeholder="Grados Fahrenheit" Keyboard="Numeric"/>
        <Button Text="Convertir a Celsius" Clicked="OnConvertirClicked"/>
        <Label x:Name="labelCelsius" TextColor="Teal" FontAttributes="Bold" Margin="10"/>
    </StackLayout>
</ContentPage>