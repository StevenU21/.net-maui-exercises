<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAPP"
    xmlns:pages="clr-namespace:MauiAPP.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiAPP">

    <FlyoutItem Title="Registro">
        <ShellContent ContentTemplate="{DataTemplate pages:RegistroPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Verificador Par/Impar">
        <ShellContent ContentTemplate="{DataTemplate pages:ParImparPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Cálculo de Edad">
        <ShellContent ContentTemplate="{DataTemplate pages:CalculoEdadPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Calculadora Básica" >
        <ShellContent ContentTemplate="{DataTemplate pages:CalculadoraPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Conversor Temperatura">
        <ShellContent ContentTemplate="{DataTemplate pages:ConversorTemperaturaPage}" />
    </FlyoutItem>

</Shell>
